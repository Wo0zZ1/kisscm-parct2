# Makefile

run:
	@echo "Starting application"
	@echo "Example: make run ARGS='--package express'"
	yarn start $(ARGS)

test:
	@echo "Running test with express package"
	yarn start -p express

install:
	@echo "Installing dependencies"
	yarn install

build:
	@echo "Building project"
	yarn build

clean:
	@echo "Cleaning generated files"
	rm -f *.png